pragma solidity 0.8.22;

contract ArithmeticOperators {
 
    uint16 public a = 10;
    uint16 public b = 3;
 
    // addition
    uint public add = a + b;
 
    // subtraction
    uint public sub = a - b;
 
    // multiplication
    uint public mul = a * b;
 
    // division
    uint public div = a / b;
 
    //modulo
    uint public mod = a % b;
 
    // decrement value
    // uint public dec = --b;
 
    // increment value
    // uint public inc = ++a;
     
}